{
	"name": "@arpite/ui",
	"version": "0.0.1",
	"license": "MIT",
	"main": "resources/dist-module/ui.cjs.js",
	"module": "resources/dist-module/ui.es.js",
	"exports": {
		".": {
			"import": "./resources/dist-module/ui.es.js",
			"require": "./resources/dist-module/ui.cjs.js"
		}
	},
	"files": [
		"resources/js",
		"resources/dist-module"
	],
	"scripts": {
		"start": "concurrently -k -n CSS,MODULE,BUNDLE,TSC -c \"bgGreen.bold.black,bgYellow.bold.black,bgYellow.bold.black,bgBlue.bold.black\" \"yarn build:css --watch\" \"yarn build:js:module --watch\" \"yarn build:js:bundle --watch\" \"yarn typecheck --watch\"",
		"build": "yarn typecheck && yarn build:js:module && yarn build:js:bundle && yarn build:css --minify",
		"build:css": "tailwind -i resources/css/index.css -o resources/dist/arpite.css",
		"build:js:module": "vite build",
		"build:js:bundle": "vite -c vite.bundle.config.ts build",
		"typecheck": "tsc --noEmit --preserveWatchOutput",
		"stylecheck": "prettier --check \"{src,tests,resources}/**/*.{ts,tsx,php}\"",
		"lint": "eslint resources/js/**/*.{tsx,ts}",
		"lint:fix": "yarn link --fix",
		"translate": "i18next-scanner --config i18next-scanner.config.js"
	},
	"devDependencies": {
		"@inertiajs/inertia": "^0.8.7",
		"@inertiajs/progress": "^0.2.7",
		"@prettier/plugin-php": "^0.18.8",
		"@tailwindcss/forms": "^0.4.1",
		"@types/node": "^17.0.45",
		"@types/react": "^17.0.39",
		"@types/react-dom": "^17.0.11",
		"@typescript-eslint/eslint-plugin": "^5.12.0",
		"@typescript-eslint/parser": "^5.12.0",
		"@vitejs/plugin-react": "^1.3.2",
		"concurrently": "^7.0.0",
		"eslint": "^8.9.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-react": "^7.28.0",
		"i18next-scanner": "^3.1.0",
		"prettier": "^2.7.1",
		"prettier-plugin-tailwindcss": "^0.1.7",
		"tailwindcss": "^3.1.4",
		"typescript": "^4.2.3",
		"vite": "^2.9.13",
		"vite-dts": "^1.0.4",
		"vite-plugin-dts": "^1.2.0"
	},
	"dependencies": {
		"@headlessui/react": "^1.6.5",
		"@inertiajs/inertia-react": "^0.5.12",
		"@mdi/js": "^6.5.95",
		"@tippyjs/react": "^4.2.6",
		"chart.js": "^3.7.0",
		"react": "^17.0.2",
		"react-chartjs-2": "^4.0.1",
		"react-dom": "^17.0.2",
		"react-i18next": "^11.15.4",
		"react-number-format": "^4.8.0"
	},
	"prettier": {
		"tabWidth": 4,
		"useTabs": true
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:react/recommended",
			"prettier"
		],
		"rules": {
			"@typescript-eslint/no-empty-function": "off",
			"react/display-name": "off"
		},
		"settings": {
			"react": {
				"version": "detect"
			}
		}
	}
}
